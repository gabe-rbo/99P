# Queremos contar o número de folhas de uma árvore binária

count_leaves(nil, 0).
count_leaves(t(_, nil, nil), 1) :- !.
count_leaves(t(_, L, R), N) :-
    count_leaves(L, N1),
    count_leaves(R, N2),
    N is N1 + N2.

% Vamos coletar as folhas.

leaves(nil, []).
leaves(t(X, nil, nil), [(t(X, nil, nil))]) :- !.
leaves(t(_, L, R), Folhas) :-
    leaves(L, FolhasR),
    leaves(R, FolhasL),
    append(FolhasR, FolhasL, Folhas).
